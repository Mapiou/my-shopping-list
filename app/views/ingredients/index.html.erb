<% content_for :title, "Liste des ingrédients" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="mt-4 mb-0">Liste des ingrédients</h1>
      <p class="mb-4">
        <%= link_to "Ajouter un ingrédient", new_ingredient_path %>
      </p>
        <div class="card">
          <div class="card-body">
            <% @ingredients.each do |ingredient| %>
              <div>
                <%= ingredient.name %>
                (<%= ingredient.section %>)
                <%= link_to "Modifier", edit_ingredient_path(ingredient) %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
