<%= simple_form_for ingredient,
                    remote: true,
                    html: { class: "my-form" } do |f|
%>
  <%=
    f.input :name,
            required: false
  %>
  <%=
    f.input :section,
            collection: Ingredient::SECTIONS,
            as: :radio_buttons,
            wrapper: "custom_collection"
  %>
  <%= f.submit  "#{@ingredient.new_record? ? t('form.add') : t('form.change')}",
                class: "btn btn-danger btn-custom"
  %>
<% end %>
