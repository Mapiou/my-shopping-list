<%= simple_form_for recipe,
                    remote: true,
                    html: { class: "my-form" } do |f|
%>
  <%=
    f.input :name,
            required: false
  %>
  <%=
    f.input :photo,
            required: false,
            as: :file,
            hint: "Fichier .jpg de 1 Mo max au format paysage uniquement",
            input_html: { accept: ("image/jpg, image/jpeg") }
  %>
  <%=
    f.input :cooking_time,
            label: "Temps de prÃ©paration (en minutes)",
            input_html: { min: 1, class: "col-3" }
  %>
  <%=
    f.input :week_nb,
            input_html: { min: 1, max: 53, class: "col-3" }
  %>
  <%=
    f.input :season,
            collection: Recipe::SEASONS,
            as: :radio_buttons,
            wrapper: "custom_collection_inline"
  %>
  <%=
    f.input :category,
            collection: Recipe::CATEGORIES,
            as: :radio_buttons,
            wrapper: "custom_collection_inline"
  %>
  <%= f.submit t("form.next"), class: "btn btn-danger btn-custom" %>
<% end %>
