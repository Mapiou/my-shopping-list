<div class="navbar navbar-expand-sm sticky-top navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <%= active_link_to "Accueil", root_path %>
      <%= active_link_to "Mes recettes", recipes_path %>
      <%= active_link_to "Ajouter une recette", new_recipe_path %>
      <%= active_link_to "Mes courses", shopping_lists_path %>
      <li class="nav-item dropdown">
        <%= link_to "#",
                    class: "nav-link dropdown-toggle
                            #{'active text-danger' if current_page?(ingredients_path) ||
                                                      current_page?(new_ingredient_path)}",
                    data: { toggle: "dropdown" },
                    'role': 'button',
                    'aria-haspopup': true,
                    'aria-expanded': false do
        %>
          <i class="fas fa-user"></i>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Voir les ingrédients",
                      ingredients_path,
                      class: "dropdown-item #{'text-danger' if current_page?(ingredients_path)}"
          %>
          <%= link_to "Ajouter un ingrédient",
                      new_ingredient_path,
                      class: "dropdown-item #{'text-danger' if current_page?(new_ingredient_path)}"
          %>
          <%= link_to "Déconnexion",
                      destroy_user_session_path,
                      method: :delete,
                      class: "dropdown-item #{'text-danger' if current_page?(new_ingredient_path)}"
          %>
        </div>
      </li>
      <% else %>
        <%= active_link_to "Se connecter", new_user_session_path %>
      <% end %>
    </ul>
  </div>
</div>
